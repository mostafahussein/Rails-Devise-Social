<% content_for :title, t(:addcompany) %>
<%= render "company_errors"%>
<div id="main-left-wrapper">
	<h2><%= t(:addcompany) %></h2>
  <p><%= t(:add_company_intro).html_safe %></p>
	<br>

  <h2><%= t(:register_your_company) %></h2>

  <%= form_for @company, :url => (@company.id) ? company_add_url(:id => @company.id) : company_add_url,
               :html => {:name => 'company_add_form', :id => 'company_add_form',
                         :class => 'remember-cookie'} do |f| %>

    <div class="clearfix">
      <label class="form-label" for="company_name"><%= t(:companyname) %></label>
      <div class="control-group">
        <%= f.text_field :name, {:class => 'form-input tooltippable', :title => t('hints.official_company_name'),
                                 'original-name' => @company.name,:data => {:placement=>'right', :trigger => "focus"}, :class => "add_tooltip"} %>
      </div>
    </div>

    <div class="clearfix">
      <label class="form-label" for="company_region_id"><%= t(:your_region) %></label>
      <div class="control-group">
        <select id="company_region_id" name="company[region_id]" class="add_tooltip" data-trigger="focus" title="<%= t('hints.please_select_your_region') %>" data-placement="right">
          <option value="0"><%= t(:selectregion) %></option>
          <% @regions.each do |region| %>
            <option value="<%= region.id %>" <%= (@company.region_id == region.id) ? 'selected="selected"' : '' %>>
              <%= region.name %>
            </option>
          <% end %>
        </select>
      </div>
    </div>

    <div><%= submit_tag t(:nextstep), :class => 'btn' %></div>

  <% end %>
</div>

<div id="main-right-wrapper">
  <h3><%= t(:how_does_it_work) %></h3>
