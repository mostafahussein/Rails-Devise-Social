<h1>Geben Sie nun bitte einige zusätzliche Informationen zu Ihrem Projekt an</h1>
<div class="main-left-wrapper">
  <p>Description : <%= @project.description %></p>
  <p>Budget : <%= @project.budget %></p>
  <p>Timeframe : <%= @project.start_date.strftime("%m/%d/%Y") %> - <%= @project.end_date.strftime("%m/%d/%Y") %></p>
  <p>Location : <%= @project.region.nil? ? "all-of-Switzerland" : @project.region.name %></p>
  <p>Tags : <%= @project.tags.map(&:name).join(", ") %></p>
  <div>
    <% @project.options.map(&:question).uniq.each do |item| %>
      <%= item.name %>
      <ul>
      	<% @project.options.where(question_id: item.id).each do |option| %>
          <li><%= option.description %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="pull-left">
    <!-- TODO fix and move to de.yml -->
    <%= link_to "Zurück", edit_project_path(@project), class: "btn" %>
  </div>

  <div class="pull-right">
    <!-- TODO fix and move to de.yml -->
    <%= link_to "Weiter", "#notification-screen", class: "btn", :'data-toggle'=>"modal" %>
  </div>
</div>

<div id="notification-screen" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>Offerte-Anfordern</h3>
	</div>
	<div class="modal-body">
		<p>The Offerte has been created.</p>
	</div>
	<div class="modal-footer">
		<a href="/" class="btn btn-primary">Ok</a>
	</div>
</div>