<h2>Companies</h2>

<%= link_to('New Company', new_admin_company_url) %>

<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% @companies.each do |company| %>
        <tr>
            <td><%= company.name %></td>
            <td><%= company.email %></td>
            <td><%= company.city.name %></td>
            <td><%= company.created_at %></td>
            <td><%= company.updated_at %></td>
            <td>
                <%= link_to('edit', edit_admin_company_url(company)) %>
            </td>
            <td>
                <%= form_for([:admin, company], :method => 'delete') do |f| %>
                    <%= f.submit('delete') %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>